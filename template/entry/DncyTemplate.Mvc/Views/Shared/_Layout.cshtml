@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Dncy.MultiTenancy.ConnectionStrings
@using Dncy.MultiTenancy
@inject IHtmlLocalizer<SharedResource> _localizer
@inject IOptions<TenantConfigurationOptions> _tenanOptions
@inject ICurrentTenant _currentTenant;
@{
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
    var tenants = _tenanOptions.Value.Tenants.Select(c => new SelectListItem { Value = c.TenantId, Text = c.TenantName, Selected = _currentTenant.Id == c.TenantId }).ToList();
    tenants.Insert(0, new SelectListItem("选择租户", "-1", _currentTenant == null));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DncyTemplate.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark navbar-expand-lg bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@_localizer[SharedResource.WebSite_Name]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li id="home_index" class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@_localizer[SharedResource.Menu_Home]</a>
                        </li>
                        <li id="home_product" class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Product">@_localizer[SharedResource.Menu_Product]</a>
                        </li>
                        <li id="home_product" class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Generate">生成静态页面</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @await Html.PartialAsync("_SelectLanguagePartial")
                        </li>
                        <li class="nav-item">
                            <form id="selectLanguage" asp-controller="Home" asp-action="SwitchTenant" asp-route-returnUrl="@returnUrl"
                                  method="post" class="form-horizontal" role="form">
                                <select name="tenantId" onchange="this.form.submit();" asp-items="tenants">
                                </select>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container pt-2 pl-1 pr-1 pb-2">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - @_localizer[SharedResource.WebSite_Name] -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
