@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Dncy.MultiTenancy.ConnectionStrings
@using Dncy.MultiTenancy
@using DncyTemplate.Mvc.HtmlHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IHtmlLocalizer<SharedResource> _localizer
@inject IOptions<TenantConfigurationOptions> _tenanOptions
@inject ICurrentTenant _currentTenant;
@{
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
    var tenants = _tenanOptions.Value.Tenants.Select(c => new SelectListItem {Value = c.TenantId, Text = c.TenantName, Selected = _currentTenant.Id == c.TenantId}).ToList();
    tenants.Insert(0, new SelectListItem("选择租户", "-1", _currentTenant == null));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DncyTemplate.Mvc</title>
    <link rel="icon" href="~/img/core-img/favicon.ico">

    <link rel="stylesheet" href="~/css/default-assets/notification.css">
    <link rel="stylesheet" href="~/css/c3.min.css">
    <link rel="stylesheet" href="~/css/layout.min.css">

    <style>
        html,body {
            overflow: hidden;
        }
        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }
        .contentHeight {
            overflow: auto;
            height: calc(100vh - 130px);
            height: -webkit-calc(100vh - 130px);
            height: -moz-calc(100vh - 130px);
        }
    </style>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/cookie/jquery.cookie.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/admetro.bundle.min.js"></script>


</head>

<body>

<div class="admetro-page-wrapper">
    <!--side menu-->
    @await Component.InvokeAsync("SideMenu")

    <!-- Page Content -->
    <div class="admetro-page-content">
        <!-- Top Header Area -->
        <header class="top-header-area d-flex align-items-center justify-content-between">
            <partial name="~/views/LayoutComponents/_TopHeaderLeft.cshtml"/>
            <partial name="~/views/LayoutComponents/_TopHeaderRight.cshtml"/>
        </header>


        <!-- Main Content Area -->
        <div class="main-content contentHeight">
            @RenderBody()
        </div>
        
        <!-- Footer Area -->
        <footer class="footer-area d-flex align-items-center flex-wrap">
            <!-- Copywrite Text -->
            <div class="copywrite-text">
                <p>
                    Admetro &copy; 2019 created by
                        <a href="http://www.bootstrapmb.com/" onclick="return loading();">Designing World</a>
                </p>
            </div>
            <!-- Footer Nav -->
            <ul class="footer-nav d-flex align-items-center">
                <li>
                    <a href="#">About</a>
                </li>
                <li>
                    <a href="#">Privacy</a>
                </li>
                <li>
                    <a href="#">Purchase</a>
                </li>
            </ul>
        </footer>
    </div>
</div>
<!-- Active JS -->
<script src="~/js/default-assets/active.js"></script>
<script src="~/js/custom/notify.min.js"></script>
<!-- These plugins only need for the run this page -->
<script src="~/js/default-assets/todolist.js"></script>
<script src="~/js/default-assets/bootstrap-growl.min.js"></script>
<script src="~/js/default-assets/bootstrap-growl-active.js"></script>

