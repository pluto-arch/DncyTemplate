@model DncyTemplate.Application.Models.Product.ProductCreateRequest


@section Styles
    {
    <style>
        .form-container {
            max-width: 1000px;
            margin-top: 60px;
            margin: auto;
        }
    </style>
}

<div class="col-xl-6 mb-30 form-container">
    <div class="card bg-boxshadow full-height">
        <div class="card-body">
            <h2 class="card-title mb-30">新建产品</h2>
           
            <form asp-action="Create" method="POST">
                @Html.AntiForgeryToken()
                <div class="form-group row no-gutters justify-content-between">
                    <label asp-for="Name" class="col-sm-3 col-form-label">产品名称</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Name" placeholder="Username">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row no-gutters justify-content-between">
                    <label asp-for="Remark" class="col-sm-3 col-form-label">介绍</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Remark" placeholder="Email">
                        <span asp-validation-for="Remark" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn- btn-c-gradient-1 text-white mr-2">Submit</button>
                <button class="btn- btn-c-gradient-5 text-white mr-2">Cancel</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    
}