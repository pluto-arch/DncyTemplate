@using DncyTemplate.Application.Models.Product
@using DncyTemplate.Application.Permission
@using DncyTemplate.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model IPagedList<ProductListItemDto>

@{
    ViewData["Title"] = "Product List";
}


<div class="row align-items-end mt-15">
    <div class="col-12">
        <!-- Page Title -->
        <div class="page-title mb-30">
            <h5 class="mb-0">产品列表</h5>
        </div>
    </div>

    <div class="col-12">
        <div class="d-flex justify-content-between">
            <div>
                <div class="widget-content widget-content-area text-left">
                    <button class="btn- btn-success btn-1 btn-1c mb-4 mr-3" asp-authorize asp-permission-code="@ProductPermission.Product.Create">新增</button>
                </div>
            </div>

            <div>
                <div class="widget-content widget-content-area text-right">
                    <form method="get" class="form-horizontal well">
                        <div class="default-repeater">
                            <div class="form-group mb-5">
                                <div class="row">
                                    <div>
                                        <input type="text" name="keyword" value="" placeholder="产品名称" style="height: 42px" class="form-control form-control-sm" />
                                    </div>
                                    <div class="ml-2">
                                        <button class="btn- btn-primary btn-1 btn-1a mb-4 mr-3">查询</button>
