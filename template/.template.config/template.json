{
  "$schema": "http://json.schemastore.org/template",
  "author": "dotnetydd.com",
  "classifications": [
    "Web",
    "Cloud",
    "DDD"
  ],
  "identity": "DotNetBoltTemplate",
  "name": "dotnet web application template",
  "shortName": "boltapp",
  "preferNameDirectory": true,
  "sourceName": "DncyTemplate",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "ProjectType": {
      "type": "parameter",
      "dataType": "choice",
      "description": "项目类型(API/MVC)",
      "isRequired": false,
      "defaultValue": "API",
      "choices": [
        {
          "choice": "API",
          "description": "WEB API"
        },
        {
          "choice": "MVC",
          "description": "MVC"
        }
      ]
    },
    "Tenant": {
      "type": "parameter",
      "dataType": "bool",
      "description": "是否包含多租户功能",
      "isRequired": false,
      "defaultValue": "true"
    },
    "IsAPI": {
      "type": "computed",
      "value": "(ProjectType == \"API\")"
    },
    "IsMVC": {
      "type": "computed",
      "value": "(ProjectType == \"MVC\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(ProjectType==\"MVC\")",
          "exclude": [
            "src/DncyTemplate.Api/**/*"
          ]
        },
        {
          "condition": "(ProjectType==\"API\")",
          "exclude": [
            "src/DncyTemplate.Mvc/**/*"
          ]
        },
        {
          "exclude": [
            "template.sln"
          ]
        },
        {
          "condition": "(!Tenant)",
          "exclude": [
            "src/DncyTemplate.Mvc/Infra/Tenancy/**/*",
            "src/DncyTemplate.Api/Infra/Tenancy/**/*",
            "src/DncyTemplate.Mvc/Controllers/TenantController.cs",
            "src/DncyTemplate.Mvc/Views/Tenant/**/*",
            "src/DncyTemplate.Domain/Aggregates/Tenancy/**/*",
            "src/DncyTemplate.Domain/Infra/Entity/IMultiTenant.cs",
            "src/DncyTemplate.Infra/Infra/EntityFrameworkCore/Interceptor/DbConnectionInterceptor.cs"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "src/DncyTemplate.Api/DncyTemplate.Api.csproj",
      "condition": "(ProjectType==\"API\")"
    },
    {
      "path": "src/DncyTemplate.Mvc/DncyTemplate.Mvc.csproj",
      "condition": "(ProjectType==\"MVC\")"
    },
    {
      "path": "aspire/DncyTemplate.AppHost/DncyTemplate.AppHost.csproj"
    },
    {
      "path": "aspire/DncyTemplate.ServiceDefaults/DncyTemplate.ServiceDefaults.csproj"
    }
  ],
  "postActions": [
    {
      "description": "添加选定的项目至解决方案",
      "manualInstructions": [
        {
          "text": "请手动添加需要的项目到解决方案"
        }
      ],
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    }
  ]
}