{
  "$schema": "http://json.schemastore.org/template",
  "author": "zhangyulong",
  "classifications": [
    "WEB",
    "net6",
    "AspNetCore"
  ],
  "identity": "DncyTemplate",
  "name": "AspNetCore DDD Template",
  "shortName": "dncy",
  "preferNameDirectory": true,
  "sourceName": "DncyTemplate",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "ProjectType": {
      "type": "parameter",
      "dataType": "choice",
      "description": "项目类型(API/MVC)",
      "isRequired": false,
      "defaultValue": "API",
      "choices": [
        {
          "choice": "API",
          "description": "WEB API"
        },
        {
          "choice": "MVC",
          "description": "MVC"
        }
      ]
    },
    "Job": {
      "type": "parameter",
      "dataType": "bool",
      "description": "是否包括后台服务",
      "isRequired": false,
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(ProjectType==\"MVC\")",
          "exclude": [
            "entry/DncyTemplate.Api/**/*"
          ]
        },
        {
          "condition": "(ProjectType==\"API\")",
          "exclude": [
            "entry/DncyTemplate.Mvc/**/*"
          ]
        },
        {
          "condition": "(!Job)",
          "exclude": [
            "entry/DncyTemplate.Job/**/*"
          ]
        },
        {
          "exclude": [
            "template.sln"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "entry/DncyTemplate.Api/DncyTemplate.Api.csproj",
      "condition": "(ProjectType==\"API\")"
    },
    {
      "path": "entry/DncyTemplate.Mvc/DncyTemplate.Mvc.csproj",
      "condition": "(ProjectType==\"MVC\")"
    },
    {
      "path": "entry/DncyTemplate.Job/DncyTemplate.Job.csproj",
      "condition": "(Job)"
    }
  ],
  "postActions": [
    {
      "description": "添加选定的项目至解决方案",
      "manualInstructions": [
        {
          "text": "请手动添加需要的项目到解决方案"
        }
      ],
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    }
  ]
}