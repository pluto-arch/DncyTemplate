@using DncyTemplate.BlazorServer.Components.Pages.Account
@inherits LayoutComponentBase
@using Microsoft.JSInterop
@inject IJSRuntime JS

<FluentLayout>
    <FluentHeader>
        <AppHeaderBar OnSideCollapsed="OnSideCollapsedHandler" />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu expanded="_sideCollapse" />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <FluentSpacer />
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>
</FluentLayout>

@code
{
    private bool _sideCollapse = true;

    void OnSideCollapsedHandler()
    {
        _sideCollapse = !_sideCollapse;
    }
}
