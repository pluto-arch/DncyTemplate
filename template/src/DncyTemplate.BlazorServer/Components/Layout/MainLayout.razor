@using DncyTemplate.BlazorServer.Components.Pages.Account
@inherits LayoutComponentBase
@using Microsoft.JSInterop
@inject IJSRuntime JS

<FluentLayout>
    <FluentHeader>
        <FluentStack Orientation="Orientation.Horizontal"
                     HorizontalAlignment="HorizontalAlignment.Left"
                     VerticalAlignment="VerticalAlignment.Center">

            <div class="logo">
                <a>Dotnetydd Blazor Web</a>
            </div>
            <FluentSpacer Width="10"/>
            <div class="btnSideCollapse">
                <FluentIcon Value="@(new Icons.Regular.Size24.AppsList())" Color="@Color.Fill" OnClick="OnSideCollapsed" />
            </div>
            <FluentSpacer />

            <UserProfile ImagePath="images/profile.png" />

        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu expanded="_sideCollapse" />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <FluentSpacer />
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>
</FluentLayout>

@code
{
    /// <inheritdoc />
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("removeLoading");
        }
    }

    private bool _sideCollapse = true;

    void OnSideCollapsed()
    {
        _sideCollapse = !_sideCollapse;
    }
}
