@using DncyTemplate.Infra.Extensions
@rendermode InteractiveServer
<FluentNavMenu Style="height: calc(100dvh - 86px);overflow-y: auto;overflow-x: hidden;box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;" @bind-Expanded="@expanded" CollapsedChildNavigation="true" Width="250" Collapsible="false">
    @foreach (var menu in menus)
    {
        @if (menu.Items.IsNullOrEmpty())
        {
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Home())" Tooltip="@menu.DisplayName" Href="@menu.Url">@menu.DisplayName</FluentNavLink>
        }
        else
        {
            <FluentNavGroup Title="@menu.DisplayName" Tooltip="@menu.DisplayName" Icon="@(new Icons.Regular.Size24.EarthLeaf())">
                @foreach (var subMenu in menu.Items)
                {
                    @if (subMenu.Items.IsNullOrEmpty())
                    {
                        <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafOne())" Tooltip="@subMenu.DisplayName" Href="@subMenu.Url">@subMenu.DisplayName</FluentNavLink>
                    }
                    else
                    {
                        <FluentNavGroup Title="@subMenu.DisplayName" Tooltip="@subMenu.DisplayName" Icon="@(new Icons.Regular.Size24.LeafThree())">
                            @foreach (var subSubMenu in subMenu.Items)
                            {
                                <FluentNavLink Icon="@(new Icons.Regular.Size24.Earth())" Href="@subSubMenu.Url" Tooltip="@subSubMenu.DisplayName">@subSubMenu.DisplayName</FluentNavLink>
                            }
                        </FluentNavGroup>
                    }
                }
            </FluentNavGroup>
        }
    }
</FluentNavMenu>

