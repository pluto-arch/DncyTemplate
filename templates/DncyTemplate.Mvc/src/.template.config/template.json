{
  "$schema": "http://json.schemastore.org/template",
  "author": "zhangyulong",
  "classifications": [
    "WEB",
    "AspNetCore",
    "GRPC"
  ],
  "identity": "PlutoNetCoreTemplate",
  "name": "Pluto AspNetCore Template",
  "shortName": "pluto",
  "preferNameDirectory": true,
  "sourceName": "PlutoNetCoreTemplate",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "Grpc": {
      "type": "parameter",
      "dataType": "bool",
      "description": "是否启用grpc",
      "defaultValue": "false"
    },
    "WebType": {
      "type": "parameter",
      "dataType": "choice",
      "description": "Web类型",
      "isRequired": false,
      "defaultValue": "API",
      "choices": [
        {
          "choice": "API",
          "description": "WEB API"
        },
        {
          "choice": "MVC",
          "description": "MVC"
        }
      ]
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!Grpc)",
          "exclude": [
            "src/PlutoNetCoreTemplate.Grpc.Protocol/**/*",
            "src/PlutoNetCoreTemplate.Application/Grpc/**/*"
          ]
        },
        {
          "condition": "(WebType==\"MVC\")",
          "exclude": [
            "src/PlutoNetCoreTemplate.Api/**/*",
            "web/**/*"
          ]
        },
        {
          "condition": "(WebType==\"API\")",
          "exclude": [
            "src/PlutoNetCoreTemplate.Mvc/**/*"
          ]
        }
      ]
    }
  ]
}