{
  "$schema": "http://json.schemastore.org/template",
  "author": "zhangyulong",
  "classifications": [
    "WEB",
    "AspNetCore"
  ],
  "identity": "DncyTemplate",
  "name": "AspNetCore DDD Template",
  "shortName": "dncy",
  "preferNameDirectory": true,
  "sourceName": "DncyTemplate",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "ProjectType": {
      "type": "parameter",
      "dataType": "choice",
      "description": "项目类型(API/MVC)",
      "isRequired": false,
      "defaultValue": "API",
      "choices": [
        {
          "choice": "API",
          "description": "WEB API"
        },
        {
          "choice": "MVC",
          "description": "MVC"
        }
      ]
    },
    "Job": {
      "type": "parameter",
      "dataType": "bool",
      "description": "是否包括后台服务",
      "isRequired": false,
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(ProjectType==\"MVC\")",
          "exclude": [
            "DncyTemplate.Entry/DncyTemplate.Api/**/*"
          ]
        },
        {
          "condition": "(ProjectType==\"API\")",
          "exclude": [
            "DncyTemplate.Entry/DncyTemplate.Mvc/**/*"
          ]
        },
        {
          "condition": "(!Job)",
          "exclude": [
            "DncyTemplate.Job/**/*"
          ]
        },
      ]
    }
  ]
}